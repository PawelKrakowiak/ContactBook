{% extends "::base.html.twig" %}

{% block title %}ContactBookBundle:Person:showAll{% endblock %}

{% block body %}

    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class='col-md-4'>
                </div>
                <div class='col-md-5'>
                    <h1 class='display-3'>Contact Book</h1>
                    <p>Choose contact to show more details.</p>
                </div>
                <div class='col-md-3'  style='padding-top: 150px'>
                    <a href="/new" class="btn btn-success">Add new contact</a><br><br>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search" name="search" id="srch-term">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <ul class="list-group">
        {%for person in contacts %}
            <li class="list-group-item">
                <a href="/{{person.id}}"><h4 style='text-align: center;'> {{person.name}} {{person.lastName}}</h4></a>
            </li>
        {%endfor%}
    </ul>

{% endblock %}
